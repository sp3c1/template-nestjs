  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:all": "npm run build:libs:all && npm run build:apps:all",
    "build:libs:all": "nest build common",
    "build:libs:all:watch": "nodemon",
    "build:apps:api": "nest build api",
    "start:apps:api": "nest start api --watch",
    "start:apps:api:watch": "nest start api --watch",
    "build:apps:worker": "nest build worker",
    "start:apps:worker": "nest start worker --watch",
    "start:apps:worker:watch": "nest start worker --watch",
    "test": "jest",
    "test:unit": "npm run test:unit:template",
    "test:unit:template": "jest --config ./apps/template/test/jest-unit.json --passWithNoTests"
  },
  "dependencies": {
